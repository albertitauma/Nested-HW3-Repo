<p id="notice"><%= notice %></p>

<p>
  <h2>Name Of Physician:
  <%= @physician.name %></h2>
</p>

<p>
  <strong>Specialty:</strong>
  <%= @physician.specialty %>
</p>

<hr>

<h3>Office Information</h3>
<ul>
    <% @physician.offices.each do |office|%>
        <li><%= office.address %> | <%= office.zip %> | <%= office.phone %></li> 
      
    <% end %>
</ul>


<div class = "location-table">
  <table class = "blueTable">
    <thead>
      <tr>
        <th>Street Address </th>
        <th>Zip Code </th>
        <th>Phone </th>
      </tr>
    </thead>

<tbody>
    <% @physician.offices.each do |office|%>
      <tr>
        <td><%= office.address %></td>
        <td><%= office.zip %></td>
        <td><%= office.phone %></td>
      </tr>
    <% end %>
  </tbody>

  </table>
</div>





